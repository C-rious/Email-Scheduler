<section class="campaign-list">
  <div class="section-header">
    <h2><i class="fas fa-envelope-open-text"></i> All Campaigns</h2>
    <a href="/" class="btn btn-primary">
      <i class="fas fa-plus"></i> New Campaign
    </a>
  </div>

  {{#if campaigns.length}}
    <div class="card-grid">
      {{#each campaigns}}
        <div class="card campaign-card">
          <div class="card-header">
            <h3>{{title}}</h3>
            <span class="status-badge {{status}}">
              <i class="status-icon {{status}}"></i>
              {{status}}
            </span>
          </div>
          <div class="card-body">
            <p class="card-meta">
              <i class="fas fa-clock"></i> 
              <strong>Scheduled:</strong> {{scheduledTime}}
            </p>
            <p class="card-meta">
              <i class="fas fa-users"></i>
              <strong>Recipients:</strong> {{logs.length}}
            </p>

            <details class="campaign-details">
              <summary>
                <span>View Details</span>
                <i class="fas fa-chevron-down"></i>
              </summary>
              <div class="details-content">
                <h4>Recipient Status</h4>
                <ul class="recipient-list">
                  {{#each logs}}
                    <li class="recipient-item">
                      <span class="recipient-email">{{email}}</span>
                      <span class="status-badge {{status}}">
                        {{status}}
                      </span>
                      {{#if error}}
                        <div class="error-message">
                          <i class="fas fa-exclamation-circle"></i>
                          {{error}}
                        </div>
                      {{/if}}
                    </li>
                  {{/each}}
                </ul>
              </div>
            </details>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="empty-state">
      <i class="fas fa-inbox"></i>
      <h3>No Campaigns Found</h3>
      <p>You haven't created any campaigns yet.</p>
      <a href="/" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create Your First Campaign
      </a>
    </div>
  {{/if}}
</section>